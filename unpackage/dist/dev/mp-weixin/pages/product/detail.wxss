.product-item__view {
  display: flex;
  flex-direction: column;
  width: 690rpx;
}
.product-item__view .product-top__view {
  display: flex;
  margin-top: 20rpx;
}
.product-item__view .product-top__view .product-cover__image {
  width: 120rpx;
  height: 120rpx;
}
.product-item__view .product-top__view .product-title__view {
  display: flex;
  flex-direction: column;
  font-size: 20px;
  color: #fff;
  line-height: 40px;
  margin-left: 10rpx;
}
.product-item__view .product-instruction__view {
  height: 30vh;
  background-color: #215e21;
  color: #fff;
  padding: 10rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
}
.product-item__view .product__btn {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.product-item__view .product__btn .product-rule__btn,
.product-item__view .product__btn .product-judge__btn,
.product-item__view .product__btn .product-history__btn {
  width: 200rpx;
  margin: 0;
  color: #fff;
}
.product-item__view .product__btn .product-rule__btn {
  background-color: #f0ad4e;
}
.product-item__view .product__btn .product-judge__btn {
  background-color: #4cd964;
}
.product-item__view .product__btn .product-history__btn {
  background-color: #007aff;
}
.popup-rule__view {
  width: 60vw;
  height: 66vh;
  padding: 10rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  position: relative;
}
.popup-rule__view .popup-rule__icon {
  position: absolute;
  right: 5px;
  top: 5px;
}
.popup-rule__view .popup-rule-title__view {
  text-align: center;
  margin-bottom: 10rpx;
}

